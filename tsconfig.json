{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/app/*": ["./app/*"],
      "@/shared/*": ["./shared/*"],
      "@/features/*": ["./features/*"],
      "@/entities/*": ["./entities/*"],
      "@/pages/*": ["./pages/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "strictBindCallApply": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "src"
  ]
}